<joblist>
  <job>
    <context>
      <options preserveOrder='true'>
        <option name='UPDATE_HOSTNAME' required='true' />
        <option name='FRIENDLY_NAME' required='true'>
          <description><![CDATA[A friendly name to describe your node
Example: ACAML 17R1 Test]]></description>
        </option>
        <option name='NODE_DESCRIPTION' required='true'>
          <description>Please describe your node</description>
        </option>
        <option delimiter=',' enforcedvalues='true' multivalued='true' name='TAG_NAME' required='true' valuesUrl='file:/rundeckpro/optionProviders/tags.json'>
          <description>Tag name for rundeck resources to categorize hosts</description>
        </option>
        <option enforcedvalues='true' name='ANSIBLE_SECTION' required='true' values='linux,prod_appservers,upgradev17R1,upgradev17R2,upgradev96,upgradev97,upgradev98,vm_checkout'>
          <description>Current ansible group</description>
        </option>
        <option name='COMMIT_MESSAGE' required='true' />
      </options>
    </context>
    <description><![CDATA[Task_ID: 9
This is job to rename hostname on the remote server]]></description>
    <dispatch>
      <excludePrecedence>true</excludePrecedence>
      <keepgoing>false</keepgoing>
      <rankOrder>ascending</rankOrder>
      <successOnEmptyNodeFilter>true</successOnEmptyNodeFilter>
      <threadcount>1</threadcount>
    </dispatch>
    <executionEnabled>true</executionEnabled>
    <group>RackspaceOrderInfo</group>
    <id>a95231aa-e1ee-4102-bf5b-df5b8a371f0f</id>
    <loglevel>INFO</loglevel>
    <name>SetServerNameFromTBD</name>
    <nodeFilterEditable>false</nodeFilterEditable>
    <nodefilters>
      <filter>tags: CRIMS,17R1</filter>
    </nodefilters>
    <nodesSelectedByDefault>false</nodesSelectedByDefault>
    <scheduleEnabled>true</scheduleEnabled>
    <sequence keepgoing='false' strategy='node-first'>
      <command>
        <description>Rename hostname</description>
        <fileExtension>ps1</fileExtension>
        <script><![CDATA[Rename-Computer -NewName @option.UPDATE_HOSTNAME@ -Restart]]></script>
        <scriptargs />
      </command>
      <command>
        <description>Update Rundeck and Ansible resource files</description>
        <jobref group='ResourcesRequest' name='RequestNodesToResources' nodeStep='true'>
          <arg line='-ACTION_STATUS "Update" -FRIENDLY_NAME ${option.FRIENDLY_NAME} -REMOTE_HOST ${node.hostname} -NODE_DESCRIPTION ${option.NODE_DESCRIPTION} -TAG_NAME ${option.TAG_NAME} -ANSIBLE_SECTION ${ANSIBLE_SECTION} -UPDATE_HOSTNAME ${option.UPDATE_HOSTNAME} -COMMIT_MESSAGE ${option.COMMIT_MESSAGE}' />
        </jobref>
      </command>
    </sequence>
    <uuid>a95231aa-e1ee-4102-bf5b-df5b8a371f0f</uuid>
  </job>
</joblist>
